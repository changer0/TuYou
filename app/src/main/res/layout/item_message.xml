<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item_message_iv_icon"
        android:src="@mipmap/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <RelativeLayout
        android:id="@+id/item_linear"
        android:layout_toRightOf="@+id/item_message_iv_icon"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_message_tv_username"
            android:layout_marginTop="5dp"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_message_tv_time"
            android:text="昨天"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_message_tv_content"
        android:layout_toRightOf="@+id/item_message_iv_icon"
        android:layout_below="@+id/item_linear"
        android:layout_marginTop="5dp"
        android:text="最近一条聊天记录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>