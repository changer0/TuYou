<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tu_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myxfd.tuyou.activity.TuYouActivity">

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RadioGroup
        android:id="@+id/main_rg"
        android:orientation="horizontal"
        android:background="#fcd5d5"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/main_rb_msg"
            android:text="消息"
            style="@style/RadioGroupStyle"/>
        <RadioButton
            android:text="地图"
            android:id="@+id/main_rb_map"
            style="@style/RadioGroupStyle"/>
        <RadioButton
            android:text="图友圈"
            android:id="@+id/main_rb_circle"
            style="@style/RadioGroupStyle"/>
        <RadioButton
            android:text="我"
            android:id="@+id/main_rb_mine"
            style="@style/RadioGroupStyle"/>

    </RadioGroup>

</LinearLayout>
