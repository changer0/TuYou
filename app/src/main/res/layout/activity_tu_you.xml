<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tu_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myxfd.tuyou.activity.TuYouActivity">

    <com.myxfd.tuyou.widgets.ViewPagerCompat
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/main_rg"/>

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eee"
        android:orientation="horizontal">

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/main_rb_msg"
            style="@style/RadioGroupStyle"
            android:text="消息"
            />

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/main_rb_map"
            style="@style/RadioGroupStyle"
            android:text="地图"/>

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/main_rb_circle"
            style="@style/RadioGroupStyle"
            android:text="图友圈"/>

        <RadioButton
            android:drawableTop="@mipmap/ic_launcher"
            android:id="@+id/main_rb_mine"
            style="@style/RadioGroupStyle"
            android:text="我"/>

    </RadioGroup>

</RelativeLayout>
