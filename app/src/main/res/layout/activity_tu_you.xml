<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tu_you"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myxfd.tuyou.activity.TuYouActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">

            <android.support.v7.widget.Toolbar
                android:id="@+id/tu_you_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"/>


        </android.support.design.widget.AppBarLayout>


        <com.myxfd.tuyou.widgets.ViewPagerCompat
            android:background="@color/colorApp4"
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/main_rg"
            android:layout_alignParentTop="true"/>

    </android.support.design.widget.CoordinatorLayout>


    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/main_rb_msg"
            style="@style/RadioGroupStyle"
            android:drawableTop="@mipmap/ic_msg"
            android:text="消息"
            />

        <RadioButton
            android:id="@+id/main_rb_map"
            style="@style/RadioGroupStyle"
            android:drawableTop="@mipmap/ic_map"
            android:text="地图"/>

        <RadioButton
            android:id="@+id/main_rb_circle"
            style="@style/RadioGroupStyle"
            android:drawableTop="@mipmap/ic_map"
            android:text="图友圈"/>

        <RadioButton
            android:id="@+id/main_rb_mine"
            style="@style/RadioGroupStyle"
            android:drawableTop="@mipmap/ic_mine"
            android:text="我"/>

    </RadioGroup>

</RelativeLayout>
