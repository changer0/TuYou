<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myxfd.tuyou.activity.MineUserActivity">

    <android.support.v7.widget.CardView
        android:layout_below="@+id/user_rl_bar"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/user_cv_icon"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="图友头像"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/user_iv_icon"
                android:src="@mipmap/icon"
                android:layout_toLeftOf="@+id/user_iv_icons"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/user_iv_icons"
                android:src="@mipmap/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/user_cv_icon"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/user_cv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_tv_username"
                android:text="图友名"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/mine_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_tv_setName"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/user_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/user_iv"
                android:src="@mipmap/ic_arrow"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_cv_username"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/user_cv_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_tv_sex"
                android:text="性别"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/mine_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_tv_setSex"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/user_iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/user_iv_sex"
                android:src="@mipmap/ic_arrow"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/user_cv_sex"
        android:layout_marginTop="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/user_cv_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_tv_age"
                android:text="年龄"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/mine_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_tv_setAge"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/user_iv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/user_iv_age"
                android:src="@mipmap/ic_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_cv_age"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/user_cv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_tv_city"
                android:text="目前所在地区"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/mine_iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/user_tv_setCity"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/user_iv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/user_iv_city"
                android:src="@mipmap/ic_arrow"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/user_rl_bar"
        android:background="@color/colorApp1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/user_iv_back"
            android:src="@mipmap/ic_menu_back"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="个人资料"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_toRightOf="@+id/user_iv_back"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</RelativeLayout>
